		"db:migrate:local": "wrangler d1 migrations apply itangbao-auth --local",
		"db:migrate:remote": "wrangler d1 migrations apply itangbao-auth --remote"
	},
	"dependencies": {
		"@auth/d1-adapter": "^1.10.0",

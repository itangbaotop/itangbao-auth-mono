		"@types/react": "^19",
		"@types/react-dom": "^19",
		"drizzle-kit": "^0.31.4",
		"eslint": "^9",
		"eslint-config-next": "15.4.6",
		"tailwindcss": "^4",
		"tw-animate-css": "^1.3.8",
		"typescript": "^5",
		"wrangler": "^4.33.1"
	}

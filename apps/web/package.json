		"clsx": "^2.1.1",
		"drizzle-orm": "^0.44.5",
		"i18next": "^25.5.2",
		"i18next-browser-languagedetector": "^8.2.0",
		"i18next-resources-to-backend": "^1.2.1",
		"jose": "^6.1.0",
		"lucide-react": "^0.542.0",
		"nanoid": "^5.1.5",
		"next": "15.4.6",
		"next-auth": "^5.0.0-beta.29",
		"react": "19.1.0",
		"react-dom": "19.1.0",
